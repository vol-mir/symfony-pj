{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block breadcrumb %}
<ol class="breadcrumb float-sm-right">
    <li class="breadcrumb-item active"><a href="{{ path('home') }}">Home</a></li>
</ol>
{% endblock %}

{% block body %}
<div class="row">
    <!-- Left col -->
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h1>News</h1>
                {% include 'home/_controls.html.twig' %}
            </div>
            <div class="card-body">
                <table id="news" class="table table-bordered table-striped table-hover table-sm">
                    <thead>
                        <tr>
                            <th width="90px">ID news</th>
                            <th>Title</th>
                            <th width="190px">Date news</th>
                            <th>Full text</th>
                            <th width="150px">Category</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>ID news</th>
                            <th>Title</th>
                            <th>Date news</th>
                            <th>Full text</th>
                            <th>Category</th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->

    {% include 'modals/_delete.html.twig' %}

{% endblock %}

{% block javascripts %}
    <script>
        $(function () {
            let table = $("#news").DataTable({
                "columnDefs": [
                    {"name": "newsId", "targets": 0},
                    {"name": "title", "targets": 1},
                    {"name": "newsDate", "targets": 2},
                    {"name": "fullText", "targets": 3},
                    {"name": "category", "targets": 4},
                    {"name": "control", "targets": 5, "orderable": false, "searchable": false},
                ],
                "ajax": {
                    "url": "{{ path('datatable_news') }}",
                    "type": "POST"
                },
                "stateSave": true,
                "processing": true,
                "serverSide": true,
                "responsive": true,
                "autoWidth": false,
                "paging": true,
                "info": true,
                "searching": true,
                "pageLength": 20,
                "order": [[0, 'asc']],
            });

            $("#downloadNewsForRBC").on("click", function() {
                let url = "{{ path('download_rbc_news') }}";
                $.ajax({
                    type: "post",
                    url: url,
                    data: {
                        "_method": "post",
                        "_token": "{{ csrf_token('download-rbc-news') }}",
                    },
                    dataType: "json"
                }).done(function (data) {
                    table.ajax.reload(null, false);
                    toastr.success(data.message);
                }).fail(function (jqXHR, textStatus) {
                    toastr.error("Something gone wrong");
                });
	        });

            $("#news").on("click", ".modal-delete-dialog", function () {
                $("#btn-modal-delete").attr("data-confirm-delete-id", $(this).attr("data-id"));
                $("#modal-delete").modal("show");
            });

            $("#modal-delete").on("click", "#btn-modal-delete", function () {
                let url = "{{ path('news_delete', { id: 'fileId_' }) }}";
                url = url.replace('fileId_', $(this).attr('data-confirm-delete-id'));

                $.ajax({
                    type: 'post',
                    url: url,
                    data: {
                        "_method": "post",
                        "_token": "{{ csrf_token('delete-item') }}",
                    },
                    dataType: 'json'
                }).done(function (data) {
                    table.ajax.reload(null, false);
                    toastr.success(data.message);
                }).fail(function (jqXHR, textStatus) {
                    toastr.error("Something gone wrong");
                });
                $('#btn-modal-delete').attr("data-confirm-delete-id", null);
                $('#modal-delete').modal('hide');
            });
        });
    </script>

{% endblock %}
